@{
    ViewData["Title"] = "Test Leaves";
}

<h1>Debug Information</h1>

<h2>Current User</h2>
<p>User ID: @ViewBag.CurrentUserId</p>
<p>Employee: @ViewBag.CurrentEmployee?.Name (ID: @ViewBag.CurrentEmployee?.EmployeeId)</p>

<h2>Database Counts</h2>
<p>Total Employees: @ViewBag.Employees.Count</p>
<p>Total Leaves: @ViewBag.Leaves.Count</p>

<h2>All Employees</h2>
@if (ViewBag.Employees.Count > 0)
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Identity User ID</th>
        </tr>
        @foreach (var emp in ViewBag.Employees)
        {
            <tr>
                <td>@emp.EmployeeId</td>
                <td>@emp.Name</td>
                <td>@emp.Email</td>
                <td>@emp.IdentityUserId</td>
            </tr>
        }
    </table>
}
else
{
    <p class="text-danger">NO EMPLOYEES IN DATABASE!</p>
}

<h2>All Leave Requests</h2>
@if (ViewBag.Leaves.Count > 0)
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Employee ID</th>
            <th>Type</th>
            <th>Start Date</th>
            <th>Status</th>
        </tr>
        @foreach (var leave in ViewBag.Leaves)
        {
            <tr>
                <td>@leave.LeaveId</td>
                <td>@leave.EmployeeId</td>
                <td>@leave.LeaveType</td>
                <td>@leave.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@leave.Status</td>
            </tr>
        }
    </table>
}
else
{
    <p class="text-danger">NO LEAVE REQUESTS IN DATABASE!</p>
}

<hr />
<h2>Quick Test</h2>
<a asp-controller="Leave" asp-action="Create" class="btn btn-primary">Test: Apply for Leave</a>
<a asp-controller="Leave" asp-action="Index" class="btn btn-secondary">Test: View Leaves</a>