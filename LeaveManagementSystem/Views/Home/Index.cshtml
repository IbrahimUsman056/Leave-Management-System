@{
    ViewData["Title"] = "Leave Management System";
}

<div class="text-center mt-4">

    <div class="bg-info text-white p-4 rounded mb-4">
        <h1 class="mb-0">🏖 Welcome to Leave Management System</h1>
    </div>

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="card shadow-sm mx-auto" style="max-width: 500px;">
            <div class="card-body">

                <h4 class="text-primary mb-3">🔐 Login Credentials</h4>

                <p>
                    <strong>Admin</strong><br />
                    📧 ibi@gmail.com<br />
                    🔑 Ibrahim@111
                </p>

                <p>
                    <strong>Employee</strong><br />
                    📧 babar@gmail.com<br />
                    🔑 Babar@056
                </p>

                <a asp-area="Identity"
                   asp-page="/Account/Login"
                   class="btn btn-success mt-3">
                    Login
                </a>

            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm mx-auto" style="max-width: 500px;">
            <div class="card-body">

                <h3 class="text-success">👋 Welcome, @User.Identity?.Name!</h3>

                @if (User.IsInRole("Admin"))
                {
                    <p class="mt-2">You are logged in as <strong>Administrator</strong>.</p>
                }
                else if (User.IsInRole("Employee"))
                {
                    <p class="mt-2">You are logged in as <strong>Employee</strong>.</p>
                }

                <a asp-controller="Dashboard"
                   asp-action="Index"
                   class="btn btn-primary mt-3">
                    Go to Dashboard
                </a>

            </div>
        </div>
    }

</div>
