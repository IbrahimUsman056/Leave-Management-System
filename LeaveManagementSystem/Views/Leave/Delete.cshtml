@model LeaveManagementSystem.Models.LeaveRequest

@{
    ViewData["Title"] = "Cancel Leave Request";
}

<div class="bg-danger text-white p-3 rounded mb-3">
    <h2 class="mb-0">❌ Cancel Leave Request</h2>
</div>

<div class="alert alert-warning">
    <strong>Confirmation Required</strong><br />
    Are you sure you want to cancel this leave request?
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Leave Type</dt>
            <dd class="col-sm-9">@Model.LeaveType</dd>

            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Model.StartDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Model.EndDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Reason</dt>
            <dd class="col-sm-9">@Model.Reason</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.Status == "Approved")
                {
                    <span class="badge bg-success">Approved</span>
                }
                else if (Model.Status == "Rejected")
                {
                    <span class="badge bg-danger">Rejected</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Pending</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="d-flex gap-2">
    <input type="hidden" asp-for="LeaveId" />
    <button type="submit" class="btn btn-danger">Cancel Leave</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
