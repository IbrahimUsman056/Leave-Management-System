@model LeaveManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="bg-danger text-white p-3 rounded mb-3">
    <h2 class="mb-0">🗑 Delete Employee</h2>
</div>

<div class="alert alert-warning">
    <strong>Warning!</strong> Are you sure you want to delete this employee?
    <br />
    This will also delete their login account.
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">

        <dl class="row mb-0">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.Department</dd>

            <dt class="col-sm-3">Designation</dt>
            <dd class="col-sm-9">@Model.Designation</dd>
        </dl>

    </div>
</div>

<form asp-action="Delete" class="d-flex gap-2">
    <input type="hidden" asp-for="EmployeeId" />

    <button type="submit" class="btn btn-danger">
        ❌ Yes, Delete
    </button>

    <a asp-action="Index" class="btn btn-secondary">
        ⬅ Cancel
    </a>
</form>
