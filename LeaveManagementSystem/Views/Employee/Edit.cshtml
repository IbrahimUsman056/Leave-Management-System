@model LeaveManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="bg-warning text-dark p-3 rounded mb-4">
    <h2 class="mb-0">✏ Edit Employee</h2>
</div>

<form asp-action="Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="EmployeeId" />

    <div class="card shadow-sm mb-3">
        <div class="card-body">

            <div class="row">

                <div class="col-md-6">

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" readonly />
                        <small class="text-muted">Name cannot be changed</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CNIC" class="form-label fw-bold"></label>
                        <input asp-for="CNIC" class="form-control" readonly />
                        <small class="text-muted">CNIC cannot be changed</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" type="email" class="form-control" readonly />
                        <small class="text-muted">Email cannot be changed</small>
                    </div>

                </div>

                <div class="col-md-6">

                    <div class="mb-3">
                        <label asp-for="Department" class="form-label fw-bold"></label>
                        <select asp-for="Department" class="form-select">
                            <option value="">Select Department</option>
                            <option value="IT">IT</option>
                            <option value="HR">HR</option>
                            <option value="Finance">Finance</option>
                            <option value="Marketing">Marketing</option>
                            <option value="Operations">Operations</option>
                        </select>
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Designation" class="form-label fw-bold"></label>
                        <input asp-for="Designation" class="form-control" />
                        <span asp-validation-for="Designation" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label fw-bold" asp-for="IsActive">
                            Active Employee
                        </label>
                    </div>

                </div>

            </div>

        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-warning">💾 Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
